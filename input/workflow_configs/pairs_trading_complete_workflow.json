{
  "workflow_type": "complete",
  "common_params": {
    "start_date": "2020-01-01",
    "end_date": "2023-12-31",
    "data_dir": "input",
    "tickers": ["AAPL", "MSFT"],
    "initial_capital": 100000.0,
    "commission": 0.001,
    "verbose": true
  },
  "strategies": {
    "PairsTrading": {
      "param_file": "input/parameter_grids/PairsTrading_grid.json",
      "parameters": {
        "lookback_period": 90,
        "entry_threshold": 3.0,
        "exit_threshold": 1.0,
        "position_size": 100,
        "rebalance_freq": 10,
        "stop_loss": 0.03
      },
      "parameter_grid": {
        "lookback_period": [60, 90, 120],
        "entry_threshold": [2.0, 2.5, 3.0],
        "exit_threshold": [0.5, 1.0, 1.5],
        "position_size": [50, 100, 150],
        "rebalance_freq": [5, 10, 15],
        "stop_loss": [0.02, 0.03, 0.05]
      },
      "optimization": {
        "n_trials": 30,
        "optimization_metric": "sharpe_ratio",
        "max_combinations": 30,
        "keep_all_results": false
      },
      "monte_carlo": {
        "n_simulations": 1000,
        "enhanced_plots": true,
        "keep_permuted_data": false,
        "confidence_level": 0.95,
        "bootstrap_pct": 0.5,
        "random_seed": 42
      },
      "walkforward": {
        "window_size": 252,
        "step_size": 63,
        "reoptimize": "always",
        "reoptimization_threshold": 0.05
      }
    }
  }
}